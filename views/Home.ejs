<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/style.css">
  </head>
    <body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
          <!-- Tabs Titles -->
          <h2 class="active">Sign in </h2>
      
          <!-- Icon -->
          <div>
            <img src="/login.jpg" class="userImage" id="icon" alt="User Icon" />
          </div>
      
          <!-- Login Form -->
        <!-- <form action="/users/login" method="POST" enctype="multipart/form-data"> -->
          <form action="/users/login" >
            <input type="text" id="email" name="email" placeholder="Email" required>
            <div class="email error"></div>
            <input type="password" name="password" id="pwd" placeholder="Password" required>
            <div class="pwd error"></div>
            <input type="submit" class="fadeIn fourth" value="Login">
            <p id="message"></p>
        </form>
        
      
        </div>
      </div>

      
</body>
<script>
    const form = document.querySelector("form"); 
    form.addEventListener('submit',async (e)=>{
        e.preventDefault(); 
        const Emailerror = form.children[1]; 
        const pwdError = form.children[3]; 

        Emailerror.textContent="";
        pwdError.textContent="";

        const email = form.email.value; 
        const password = form.password.value; 
        console.log(email,password)

        try {
            const res = await fetch('/users/login',{
                method : "POST",
                body : JSON.stringify({email , password}),
                headers : {'Content-type' : 'application/json'}                
            }); 
            const data = await res.json(); 
            console.log(data +"+++++++");
            Emailerror.textContent=data.email;
            pwdError.textContent=data.password;
            if(data.user){
                location.assign("/establishment/establishments");
            }  
        } catch (error) {
            console.log(error);
        }
    })
</script>
</html>